{
    "name": "Txt Reader",
    "description": "Format your local txt file to read",
    "version": "0.1",
    "permissions": [
        "tabs",
        "cookies",
        "file:///*",
        "file://*/*"
    ],
	"icons": { "16": "icon16.png",
          "128": "icon128.png" },
    "background": {
        "scripts": [ "jquery-2.1.3.min.js", "background.js" ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Txt Reader"
    },
    "manifest_version": 2
}
